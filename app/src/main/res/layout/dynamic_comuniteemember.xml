<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:background="@drawable/rect"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_profile_img1"
                        android:layout_width="60dp"
                        android:layout_centerVertical="true"
                        android:layout_height="60dp"
                        android:src="@drawable/profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/tick_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitCenter"/>

                </RelativeLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_toLeftOf="@+id/more_img"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/rl"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView android:fontFamily="@font/times_new_roman"
                            android:id="@+id/title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shiv Pandey"
                            android:textColor="@color/black"

                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView android:fontFamily="@font/times_new_roman"
                            android:id="@+id/des_tv"
                            android:layout_marginRight="70dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="10:00 AM |Lucknow UP"
                            android:textSize="13sp"/>
                        <TextView android:fontFamily="@font/times_new_roman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:visibility="gone"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:gravity="center_vertical"
                            android:ellipsize="end"
                            android:drawablePadding="5dp"
                            android:textColor="#B00202"
                            android:padding="5dp"
                            android:id="@+id/ststus_tv"
                            android:background="@drawable/border"
                            android:layout_alignParentRight="true"
                            android:text="View profile"
                            android:textSize="12sp"/>

                    </RelativeLayout>
                    <TextView android:fontFamily="@font/times_new_roman"
                        android:id="@+id/joing_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="10:00 AM |Lucknow UP"
                        android:textSize="13sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/login_btn_red"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView android:fontFamily="@font/times_new_roman"
                            android:id="@+id/user_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:textColor="#CD0404"
                            android:text="ID No.-100582" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>