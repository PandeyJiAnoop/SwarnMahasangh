<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFEACB"
    android:id="@+id/main_rl"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/signup_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:fontFamily="@font/times_new_roman"
            android:id="@+id/signin_TextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Personal Information"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/purple_200"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView android:fontFamily="@font/times_new_roman"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:text="Add Personal Details "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_img"
                        android:visibility="gone"
                        android:layout_width="150dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/purple_700"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/addprofile"
                        android:layout_height="120dp">

                    </de.hdodenhof.circleimageview.CircleImageView>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">

                        <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/times_new_roman"
                            android:id="@+id/fname_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="First Name"

                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                        android:layout_margin="2dp">

                        <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/times_new_roman"
                            android:id="@+id/name_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Last Name"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                        android:layout_margin="2dp">

                        <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/times_new_roman"
                            android:id="@+id/mobile_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile No."
                            android:inputType="phone"
                            android:maxLength="10" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:passwordToggleEnabled="true"


                        android:layout_margin="2dp">

                        <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/times_new_roman"
                            android:id="@+id/password_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password."
                            android:inputType="textPassword"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:passwordToggleEnabled="true"
                        android:layout_margin="2dp">

                        <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/times_new_roman"
                            android:id="@+id/conf_pasword_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Confirm password"
                            android:inputType="textPassword"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                        android:layout_height="wrap_content"
                        android:layout_margin="2dp">

                        <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/times_new_roman"
                            android:id="@+id/email_et"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp">

                        <TextView android:fontFamily="@font/times_new_roman"
                            android:id="@+id/tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            android:text="Cast*"
                            android:visibility="gone"
                            android:textColor="#555555"
                            android:focusable="true"
                            android:focusableInTouchMode="true"/>


                        <Spinner
                            android:visibility="gone"
                            android:id="@+id/cast_sp"
                            android:layout_below="@+id/tv"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/border"
                            android:entries="@array/castename" />
                        <TextView android:fontFamily="@font/times_new_roman"
                            android:layout_below="@+id/cast_sp"
                            android:id="@+id/TextView_indian_states"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/state"
                            android:textColor="#555555"
                            android:focusable="true"
                            android:focusableInTouchMode="true"/>


                        <Spinner
                            android:background="@drawable/border"
                            android:id="@+id/sp_state"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:layout_below="@id/TextView_indian_states"/>

                        <TextView android:fontFamily="@font/times_new_roman"
                            android:id="@+id/TextView_indian_districts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sp_state"
                            android:layout_marginTop="2dp"
                            android:padding="6dp"
                            android:text="@string/district"
                            android:textColor="#555555"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />

                        <Spinner
                            android:background="@drawable/border"
                            android:id="@+id/sp_city"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:layout_below="@id/TextView_indian_districts"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/cbWindows"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:textSize="10sp"
                            android:textColor="#807D7D"
                            android:text="  I Agree to Terms &amp; Conditions &amp; Privacy Policy," />
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/view_details_tv"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/purple_200"
                            android:text="view details" />
                    </LinearLayout>




                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_signUp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_corner1"
                        android:text="Next"
                        android:textSize="21dp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/purple_200"
        android:id="@+id/login_rl"
        android:gravity="center"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/profile"
            android:layout_height="35dp">
        </ImageView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Already have an account? Sign In"/>

    </LinearLayout>

</RelativeLayout>